@import "../cart/cart.wxss";
.main_header swiper{
  height:422rpx; 
  width: 100%;
}
.main_header swiper image{
  width: 100%;
  height: 100%;
}
.isCollage{
  padding: 10rpx 20rpx;
  background: #666;
  font-size: 26rpx;
  color: #fff;
  border-radius: 10rpx;
  margin-left: 20rpx;
}
.details_title{
  line-height: 40rpx;
}
.details_left{
  width: 80%;
  padding-right: 30rpx;
}
.details_right{
  width: 20%;
  text-align: center;
  border-left: 1px dashed #ccc;
  position: relative;
}
.details_right .iconfont{
  font-size: 50rpx;
  color: #F5A120;
}
.nav-scroll{
  width: 100%;
  color: #666;
  background: #fff;
}
.scroll-view_H{
  white-space:nowrap;
  width: 100%;
  box-sizing: border-box;
}
.nav-name{
  display:inline-block;
  border-bottom: 2px solid transparent;
  width: 50%;
  text-align: center;
  padding: 30rpx 0;
}
.nav-hover{
  color: #E90606;
  border-bottom: 2px solid #E90606;
}
.zanwu {
  margin-top: 80rpx;
}
.pin_left{
  width: 75%;
}
.tou{
  border-radius: 50%;
  width: 84rpx;
  height: 84rpx;
}
.pin_wen{
  color: #333;
  margin-left: 20rpx;
  width: 84%;
  justify-content: space-between;
}
.goods_footer .iconfont{
  color: #666;
  font-size: 62rpx;
}
.goods_footer .iconfont.active{
  color: #E90606;
}
.footer_item{
  padding: 10rpx 0;
  text-align: center;
