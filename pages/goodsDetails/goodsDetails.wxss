  width: 15%;
  position: relative;
}
.goods_footer{
  height: 116rpx;
  width: 100%;
  box-shadow: 1px 1px 6px #eee;
  position: fixed;
  bottom: 0;
  overflow: hidden;
  left:0 ;
  background: #fff;
}
.bor_l{
  border-left: 1px solid #eee;
}
.mall_left{
  width: 30%;
  background: #DDC1C1;
}
.mall_right{
  background: #E90606;
  width: 40%;
}
.goods_body{
  margin-bottom: 120rpx;
}
.wan_item .iconfont{
  font-size: 50rpx;
}
.wan_item{
  width: 25%;
  padding: 20rpx 30rpx;
  font-size: 24rpx;
  text-align: center;
}
.text_body swiper{
  height: 100rpx;
}
.collage_img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.collage_name{
  width: 250rpx;
}
.collage_last{
  font-size: 24rpx;
  display: flex;
  justify-content:flex-end;
}
.content{
  margin-bottom: 40rpx;
}
.toCollage{
  width: 160rpx;
  background: #E90606;
  padding: 20rpx 0;
  text-align: center;
}
.info_con{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100vh;
}
.details_btn{
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
  right: 0;
  top: 0
}
.info_bg{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5)
}
.infoBody{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  max-height: 880rpx;
  background: #fff;
  overflow: visible;
}
.page{
  height: 100vh;
  overflow: hidden;
}
.info_img{
  width: 200rpx;
  height: 200rpx;
  border: 2px solid #fff;
  border-radius: 10rpx;
  box-shadow: 1px 1px 5px #666;
  position: absolute;
  top: -50rpx;
  left: 20rpx;
}
.icon-cha{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 50rpx;
}
.info_title{
  width: 400rpx;
  margin-left: 260rpx;
  margin-top: 65rpx;
}
.info_body{
  margin-top: 40rpx;
}
.info_specifications{
  max-height: 350rpx;
  overflow: scroll;
}
.info_item{
  margin: 10rpx;
  background: #F3F3F3;
  color: #333;
  position: relative;
  text-align: center;
  border-radius: 10rpx;
  font-size: 26rpx;
  min-width:90rpx;
  max-width:680rpx;
  line-height:70rpx;
  height: 70rpx;
  padding:0 20rpx;
}
.info_item.active{
  background:#E90606;
  color: #fff;
}
.info_gou{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  bottom: 0;
  right: 0;
}
.info_gou.active{
  display: none;
}
.info_footer{
  width: 100%;
  position: absolute;
  bottom: 0;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  left: 0;
  background: #E90606;
}
.cart-box{
  margin-bottom: 100rpx;
